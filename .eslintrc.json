{
    "extends": "airbnb-base",
    "rules": {
        "no-undef": 2,
        "comma-dangle": [2, "never"],
        "indent": [2, 4, { "SwitchCase": 1 }],
        "brace-style": [2, "1tbs", {
            "allowSingleLine": true
        }],
        "no-var": 2,
        "no-use-before-define": 0,
        "guard-for-in": 0,
        "no-loop-func": 0,
        "spaced-comment": 0,
        "no-trailing-spaces": [2, {
            "skipBlankLines": true
        }],
        "max-len": ["warn", 100, 4]
    }
}
